{
  "name": "mission-control",
  "version": "1.0.0",
  "description": "Real-time command center for OpenClaw AI agent squads",
  "author": "Bhanu Teja P (adapted)",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "auto-claim": "node scripts/trigger-auto-claim.js",
    "auto-claim:cron": "npx convex run cron:autoClaimCron",
    "daemon:start": "pm2 start scripts/notification-daemon.js --name mission-control-daemon",
    "daemon:stop": "pm2 stop mission-control-daemon",
    "heartbeat:setup": "bash scripts/setup-agents.sh",
    "morning-brief": "node scripts/morning-brief.js",
    "morning-brief:setup": "node scripts/setup-morning-brief.js",
    "automation:status": "echo 'Mission Control Automation Status:' && pm2 list",
    "calendar:sync": "echo 'Calendar sync feature coming soon'",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "validate": "npm run lint && npm run build && npm test"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.0",
    "convex": "^1.31.0",
    "date-fns": "^3.6.0",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.400.0",
    "next": "^15.1.6",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swagger-ui-dist": "^5.31.1",
    "swagger-ui-react": "^5.31.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "zod": "^4.3.6",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/swagger-ui-react": "^5.18.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
